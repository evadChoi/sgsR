citHeader("To cite sgsR in publications use:")

citEntry(
  entry    = "Article",
  title    = "sgsR: Structurally Guided Sampling Approaches using ALS Data for R",
  author   = person(given = "Tristan", middle = "RH", last = "Goodbody"),
  journal  = "NA",
  year     = sub("-.*", "", meta$Date),
  volume   = "NA",
  number   = "NA",
  pages    = "NA",
  url      = "https://github.com/tgoodbody/sgsR",
  textVersion = paste("Goodbody, TRH (2021). sgsR: Structurally Guided Sampling Approaches using ALS Data for R. https://github.com/tgoodbody/sgsR "))
  
  year <- sub("-.*", "", meta$Date)
  note <- sprintf("R package version %s", meta$Version)
  
  bibentry(bibtype = "Manual",
  title = "sgsR: Structurally Guided Sampling Approaches using ALS Data for R",
  author = person(given = "Tristan", middle = c("R","H"), last = "Goodbody"),
  year = year,
  note = note,
  url = "https://github.com/tgoodbody/sgsR")
  textVersion = paste0("Goodbody TRH, (", year, ").",
  " sgsR: Structurally Guided Sampling Approaches using ALS Data for R.   ", note, ".",
  " https://github.com/tgoodbody/sgsR")
